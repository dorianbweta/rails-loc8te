<label for="<%= index %>">
  <%# DIV %>
  <div class="ride-info d-flex align-items-center">
    <div class="d-flex align-items-center">
      <%= image_tag "uber-logo.png", alt: "Logo", class: "ride-logos" %>
      <h3> <%= ride.platform.name.capitalize %> </h3>
    </div>
    <div class="d-flex align-items-center">
      <p><%= ride.ETA %> min</p>
      <p>$ <%= ride.fare %></p>
    </div>
  </div>
  <input type="radio" name="ride" id="<%= index %>" class="hide-me">
</label>
