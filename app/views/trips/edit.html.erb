<div class="full-page">

  <div class="container">
    <div class="home-card d-flex justify-content-center">
      <h3>View the available options below!</h3>
    </div>
    <%#= render "shared/trip_form" %>
    <%= render "shared/map" %>

    <form action="/trips/<%= @trip.id %>"
          data-controller="trip-update"
          data-action="submit->trip-update#update"
          data-trip-update-rides-value="<%= @rides %>"
          data-trip-update-link-value="<%= @rides.first.link_to_app %>"
          >
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="container">
        <div class="ride-category">
          <h2>Economy</h2>
          <% @rides.each_with_index do |ride, index| %>
            <%= render "ride_checkbox", ride: ride, index: index %>
          <% end %>
          <input type="submit" value="Book Now!" class="button-primary">
        </div>
      </div>
    </form>
  </div>
</div>
