<div class="container">
  <div class="home-card d-flex justify-content-center">
    <h3>Hello! Where would you like to go to today?</h3>
  </div>
</div>

<div class="container d-flex align-items-center">
  <div style="float:left;">
    <%= simple_form_for @trip do |f| %>
      <%= f.input :start_location,
        input_html: {
          data: { address_autocomplete_target: "location" },
          class: "d-none",
        },
        placeholder: "Start location",
        label: false,
        wrapper_html: {
          data: {
            controller: "address-autocomplete",
            address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
          }
        }
      %>
  </div>
  <div style="float:right;">
    <%= f.input :end_location,
        input_html: {
          data: { address_autocomplete_target: "location" },
          class: "d-none"
        },
        label: false,
        wrapper_html: {
          data: {
            controller: "address-autocomplete",
            address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
          }
        }
      %>
  </div>
</div>

<div class="container d-flex justify-content-center">
      <%= f.submit class:"button-primary-full" %>
    <% end %>
</div>


<%= render "shared/map" %>


<% if params[:end] %>
  <div class="overlay"></div>
  <div>
    <%= simple_form_for @location do |f| %>
      <%= f.input :name %>
      <%= f.submit %>
    <% end %>
  </div>
  <%= link_to "Skip", trips_path %>
<% end %>

<%= render "layouts/homepage" %>
